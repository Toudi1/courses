<Window x:Class="WPF_04C_Events_in_XAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_04C_Events_in_XAML"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Click me" Click="Button_Click" Width="150" Height="100" />
        <Button Content="Mouse up" MouseUp="Button_MouseUp" Width="150" Height="100" />
        <Button Content="Mouse up" PreviewMouseUp="Button_PreviewMouseUp" Width="150" Height="100" />
        <Button Content="Mouse up" PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown" PreviewMouseRightButtonDown="Button_PreviewMouseRightButtonDown" Width="150" Height="100" />
    </StackPanel>
</Window>
